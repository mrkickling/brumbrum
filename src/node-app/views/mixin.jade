mixin add_income_modal(id, title, text, group_id)
  div.modal.fade(id=id, tabindex="-1", role="dialog")
    div.modal-dialog(role="document")
      div.modal-content
        div.modal-header
          h3= title
        div.modal-body
          p= text
          form.form-group(id="ajax-form-add-income", action="/group/#{group_id}/income")
            label(for="description") Beskrivning
            input.form-control(type="text", name="description", id="description", placeholder="Beskrivning")
            label(for="sum") Summa
            input.form-control(type="text", name="sum", id="sum", placeholder="Kostnad")
            label(for="time") Tidpunkt
            input.form-control(type="datetime-local", name="time", id="time", placeholder="Tidpunkt")
            label(for="done_for") Tilldelas
            select.select-several-users-incomes(name="done_for" multiple="multiple")
              each member in members
                option(value="#{member.dataValues.id}") #{member.dataValues.name}
            input.form-control(type="submit" value="Lägg till")

